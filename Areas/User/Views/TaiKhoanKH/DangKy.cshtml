
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Areas/User/Views/Shared/_LayoutAll.cshtml";
}

@using (Html.BeginForm("CheckDangKy", "TaiKhoanKH", FormMethod.Post))
{
   <div class="col-sm-6" style="margin-top: 10px; margin-left: 25%">

       <div class="panel panel-success">
           <div class="panel-heading"><h3 class="text-center">Thông tin tài khoản</h3></div>
           <div class="panel-body">
               <div class="form-group">
                   <label class="control-label col-sm-3">Tài khoản</label>
                   <div class="col-sm-8">
                       <input type="text" class=" form-control" name="taikhoankh" />
                   </div>
               </div>
               <div class="form-group">
                   <label class="control-label col-sm-3">Mật khẩu</label>
                   <div class="col-sm-8">
                       <input type="text" class=" form-control" name="matkhau" />
                   </div>
               </div>
               <div class="form-group">
                   <label class="control-label col-sm-3">Nhập lại Mật khẩu</label>
                   <div class="col-sm-8">
                       <input type="text" class=" form-control" name="nlmatkhau" />
                   </div>
               </div>
               <div class="form-group">
                   <label class="control-label col-sm-3">Họ và tên</label>
                   <div class="col-sm-8">
                       <input type="text" class=" form-control" name="tenkh" />
                   </div>
               </div>
               <div class="form-group">
                   <label class="control-label col-sm-3">Giới tính</label>
                   <div class="col-sm-8">
                       <input type="text" class=" form-control" name="gioitinh" />
                   </div>
               </div>
               <div class="form-group">
                   <label class="control-label col-sm-3">Ngày sinh</label>
                   <div class="col-sm-8">
                       <input type="text" class=" form-control" type="date" name="ngaysinh" />
                   </div>
               </div>
               <div class="form-group">
                   <label class="control-label col-sm-3">Địa chỉ</label>
                   <div class="col-sm-8">
                       <input type="text" class=" form-control" name="diachi" />
                   </div>
               </div>
               <div class="form-group">
                   <label class="control-label col-sm-3">Điện thoại</label>
                   <div class="col-sm-8">
                       <input type="text" class=" form-control" name="dienthoai" type="number" />
                   </div>
               </div>
               <div class="form-group">
                   <label class="control-label col-sm-3">Email</label>
                   <div class="col-sm-8">
                       <input type="text" class=" form-control" name="email" type="email" />
                   </div>
               </div>

           </div>
       </div>
       <button type="submit" style="float: right" class="btn btn-default">Đăng ký</button>
   </div>
}

<script>
    function check() {
        var new_pass = document.getElementsByName("matkhau")[0].value;
        var corect_pass = document.getElementsByName("nlmatkhau")[0].value;

        if (new_pass !== corect_pass) {
            alert("Mật khẩu  và mật khẩu xác nhận không trùng khớp. Vui lòng kiểm tra lại.");
            return false; // Ngăn chặn việc gửi form
        }

        return true; // Cho phép gửi form nếu mật khẩu khớp nhau
    }
    document.querySelector("form").onsubmit = check;
</script>

